@model VideoGamesSite.Models.Game

@{
    ViewData["Title"] = "Delete Game";
}

<h1 class="fw-bold mb-3">Delete Game</h1>

<div class="row">
    <div class="col-lg-7 col-xl-6">
        <div class="alert alert-warning">
            Are you sure you want to delete <strong>@Model.Title</strong> (@Model.Platform?.Name)?
        </div>

        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Genre</dt>
                    <dd class="col-sm-8">@Model.Genre</dd>

                    <dt class="col-sm-4">Release Year</dt>
                    <dd class="col-sm-8">@Model.ReleaseYear</dd>

                    <dt class="col-sm-4">Hours Played</dt>
                    <dd class="col-sm-8">@Model.HoursPlayed</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="d-flex gap-2">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>
