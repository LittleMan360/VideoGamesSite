@model IList<VideoGamesSite.Models.TopGame>

@{
    ViewData["Title"] = "Top 10 Favorite Games";
    var isFull = Model.Count >= 10;
}

<h1 class="fw-bold mb-2">Top 10 Favorite Games — Dalton Towe</h1>
<p class="text-secondary">
    This is my personal Top 10 list. I can add new favorites, remove them, and move games up or down to 
    adjust their ranking. The list is stored in the database so changes persist between runs.
</p>

<div class="row g-4">
    <div class="col-lg-6">
        <h2 class="h5">Current Top 10</h2>
        <p class="small text-secondary mb-2">
            At most 10 games. Use the arrow buttons to change the order.
        </p>

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                No games in the Top 10 yet. Add one using the form on the right.
            </div>
        }
        else
        {
            <ol class="list-group list-group-numbered mb-3">
                @foreach (var game in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center gap-2 flex-wrap">
                        <div>
                            <strong>@game.Title</strong>
                            @if (!string.IsNullOrWhiteSpace(game.Tag))
                            {
                                <span class="badge bg-primary rounded-pill ms-2">@game.Tag</span>
                            }
                        </div>

                        <div class="btn-group btn-group-sm" role="group">
                            <!-- Move up/down -->
                            <form asp-action="MoveTopGame" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@game.Id" />
                                <button type="submit" name="direction" value="up" class="btn btn-outline-secondary">&#8593;</button>
                                <button type="submit" name="direction" value="down" class="btn btn-outline-secondary">&#8595;</button>
                            </form>

                            <!-- Remove -->
                            <form asp-action="RemoveTopGame" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@game.Id" />
                                <button type="submit" class="btn btn-outline-danger">Remove</button>
                            </form>
                        </div>
                    </li>
                }
            </ol>

            <div class="small text-secondary">
                Count: <strong>@Model.Count</strong> / 10
            </div>
        }
    </div>

    <div class="col-lg-6">
        <h2 class="h5">Add a Game</h2>
        <p class="small text-secondary">
            Add a new game with an optional short tag (genre, role, or why it belongs on the list).
        </p>

        @if (isFull)
        {
            <div class="alert alert-warning small">
                The Top 10 list is full. Remove a game before adding another.
            </div>
        }

        <form asp-action="AddTopGame" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Title</label>
                <input class="form-control" name="title" placeholder="Game title" required @(isFull ? "disabled" : "") />
            </div>

            <div class="mb-3">
                <label class="form-label">Tag / Genre</label>
                <input class="form-control" name="tag" placeholder="FPS, RPG, Survival, Co-op, etc." @(isFull ? "disabled" : "") />
            </div>

            <button type="submit" class="btn btn-primary w-100" @(isFull ? "disabled" : "")>
                Add to Top 10
            </button>
            <div class="form-text mt-1">
                New games are added to the bottom of the list. You can adjust their rank using the arrow buttons.
            </div>
        </form>
    </div>
</div>
