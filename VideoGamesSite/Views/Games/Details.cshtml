@model VideoGamesSite.Models.Game

@{
    ViewData["Title"] = "Game Details";
}

<h1 class="fw-bold mb-3">@Model.Title</h1>

<div class="row">
    <div class="col-lg-7 col-xl-6">
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Platform</dt>
                    <dd class="col-sm-8">@Model.Platform?.Name</dd>

                    <dt class="col-sm-4">Genre</dt>
                    <dd class="col-sm-8">@Model.Genre</dd>

                    <dt class="col-sm-4">Release Year</dt>
                    <dd class="col-sm-8">@Model.ReleaseYear</dd>

                    <dt class="col-sm-4">Hours Played</dt>
                    <dd class="col-sm-8">@Model.HoursPlayed</dd>
                </dl>
            </div>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
