@model IEnumerable<VideoGamesSite.Models.Game>

@{
    ViewData["Title"] = "Game Library";
    var games = Model?.ToList() ?? new List<VideoGamesSite.Models.Game>();
    var totalGames = games.Count;
    var totalHours = games.Sum(g => g.HoursPlayed);
    var newestYear = games.Any() ? games.Max(g => g.ReleaseYear) : (int?)null;
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <div>
        <h1 class="fw-bold mb-1">Game Library</h1>
        <p class="text-secondary mb-0">
            A simple database-backed list of games I’ve played, including platform, genre, and hours.
        </p>
    </div>
    <div class="d-flex flex-wrap gap-2 justify-content-end">
        <a class="btn btn-primary" asp-action="Create">
            + Add Game
        </a>
    </div>
</div>

@if (!games.Any())
{
    <div class="alert alert-info">
        No games have been added yet. Use the <strong>Add Game</strong> button above to create your first entry.
    </div>
}
else
{
    <div class="row g-3 mb-3">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-secondary small">Total games</div>
                    <div class="h4 mb-0">@totalGames</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-secondary small">Total hours logged</div>
                    <div class="h4 mb-0">@totalHours</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-secondary small">Most recent release</div>
                    <div class="h4 mb-0">@((newestYear?.ToString()) ?? "-")</div>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Platform</th>
                    <th>Genre</th>
                    <th class="text-center">Release</th>
                    <th class="text-center">Hours</th>
                    <th class="text-end" style="width: 1%; white-space: nowrap;">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var g in games)
            {
                <tr>
                    <td>
                        <strong>@g.Title</strong>
                    </td>
                    <td>
                        <span class="badge bg-dark">
                            @g.Platform?.Name
                        </span>
                    </td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(g.Genre))
                        {
                            <span class="badge bg-primary rounded-pill">@g.Genre</span>
                        }
                        else
                        {
                            <span class="text-secondary small">–</span>
                        }
                    </td>
                    <td class="text-center">@g.ReleaseYear</td>
                    <td class="text-center">@g.HoursPlayed</td>
                    <td class="text-end text-nowrap">
                        <a class="btn btn-sm btn-secondary"
                           asp-action="Details"
                           asp-route-id="@g.Id">Details</a>

                        <a class="btn btn-sm btn-primary"
                           asp-action="Edit"
                           asp-route-id="@g.Id">Edit</a>

                        <a class="btn btn-sm btn-danger"
                           asp-action="Delete"
                           asp-route-id="@g.Id">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
