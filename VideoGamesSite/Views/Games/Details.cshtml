@model VideoGamesSite.Models.Game
@{ ViewData["Title"] = "Game Details"; }
<h1>@Model.Title</h1>
<dl class="row">
  <dt class="col-sm-3">Platform</dt><dd class="col-sm-9">@Model.Platform?.Name</dd>
  <dt class="col-sm-3">Genre</dt><dd class="col-sm-9">@Model.Genre</dd>
  <dt class="col-sm-3">Release Year</dt><dd class="col-sm-9">@Model.ReleaseYear</dd>
  <dt class="col-sm-3">Hours Played</dt><dd class="col-sm-9">@Model.HoursPlayed</dd>
</dl>
<p>
  <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
  <a class="btn btn-secondary" asp-action="Index">Back</a>
</p>
