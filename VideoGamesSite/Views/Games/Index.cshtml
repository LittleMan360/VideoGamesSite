@model IEnumerable<VideoGamesSite.Models.Game>
@{ ViewData["Title"] = "Games"; }
<h1>Games â€” <span style="font-weight:600">Dalton Towe</span></h1>
<p><a class="btn btn-primary" asp-action="Create">Add Game</a></p>
<table class="table table-striped">
  <thead><tr><th>Title</th><th>Platform</th><th>Genre</th><th>Release</th><th>Hours</th><th></th></tr></thead>
  <tbody>
  @foreach (var g in Model)
  {
    <tr>
      <td>@g.Title</td>
      <td>@g.Platform?.Name</td>
      <td>@g.Genre</td>
      <td>@g.ReleaseYear</td>
      <td>@g.HoursPlayed</td>
      <td class="text-nowrap">
        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@g.Id">Details</a>
        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@g.Id">Edit</a>
        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@g.Id">Delete</a>
      </td>
    </tr>
  }
  </tbody>
</table>
